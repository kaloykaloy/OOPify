<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the solid color of the background -->
    <solid android:color="#5B0178" /> <!-- Replace with your desired color -->

    <!-- Set the corner radius to make it rounded -->
    <corners android:radius="30dp" /> <!-- Adjust the radius as needed -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
</shape>
