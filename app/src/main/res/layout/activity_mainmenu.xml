<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    tools:context=".Mainmenu">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/mainmenubg">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/paladins"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text=" OOPIFY "
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:elevation="10dp"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:background="@drawable/rectanglebg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/introductionBg"
                    android:layout_width="180dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button">
                    <TextView
                        android:id="@+id/introductionButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spaceage"
                        android:text="MAIN"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profileBg"
                    android:layout_width="180dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button">
                    <TextView
                        android:id="@+id/profileButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spaceage"
                        android:text="profile"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mapBg"
                    android:layout_width="180dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button">
                    <TextView
                        android:id="@+id/mapButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spaceage"
                        android:text="map"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/statisticsBg"
                    android:layout_width="180dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button">
                    <TextView
                        android:id="@+id/statisticsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spaceage"
                        android:text="statistics"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lessonBg"
                    android:layout_width="180dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button">
                    <TextView
                        android:id="@+id/lessonButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spaceage"
                        android:text="lesson"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/logoutContainer"
                    android:layout_width="180dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button">
                    <TextView
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spaceage"
                        android:text="logout"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"/>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>


</FrameLayout>