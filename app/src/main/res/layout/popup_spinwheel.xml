<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/mainbgcongrats"
    android:gravity="center">

    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="280dp"
        android:background="@drawable/popupbg"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/countDownWheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:26"
            android:fontFamily="@font/alienenc"
            android:textSize="45sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/resultWheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please come back again later!"
            android:fontFamily="@font/alienenc"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/proceedWheel"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/proceedbuttoncongrats"
            android:orientation="vertical"
            android:layout_gravity="center">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
